.list{
    border-top:1rpx solid #e8e8e8;
    border-bottom: 1rpx solid #e8e8e8;
    background: #fff;
    font-size: 30rpx;
    margin-bottom: 40rpx;
    vertical-align: middle;
}

.list-item{
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
    margin-left: 24rpx;
    border-bottom: 1rpx solid #e8e8e8;
}
.list-item:last-child{
    border-bottom: none;
}
.list-item .label{
    font-size: 30rpx;
    width: 180rpx;
    float: left;
}
.list-item .value,.list-item .arraw{
    float: right;
    margin-right: 24rpx;
    color: #999;
}

.support{
    height: 200rpx;
    text-align: center;
    font-size: 24rpx;
    color: #999;
}

