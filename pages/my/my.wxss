.my{
	font-family: arial, "Microsoft Yahei";
	background: #fafafa
}
.list{
	border-top:1rpx solid #e8e8e8;
	border-bottom: 1rpx solid #e8e8e8;
	background: #fff;
	font-size: 30rpx;
	margin-bottom: 40rpx;
	vertical-align: middle;
}

.list-item{
	height: 60rpx;
	line-height: 60rpx;
	padding: 10rpx 0;
	margin-left: 24rpx;
	border-bottom: 1rpx solid #e8e8e8;
}
.list-item:last-child{
	border-bottom: none;
}
.list-item .label{
	font-size: 30rpx;
}
.list-item .value,.list-item .arraw{
	float: right;
	margin-right: 24rpx;
	color: #999;
}
.avatar{
	height: 128rpx;
}
.avatar .label{
	line-height: 128rpx;
}
.avatar image{
	height: 128rpx;
	width: 128rpx;
	float: right;
	margin-right: 24rpx;
	border-radius: 50%;
}