					<view>免运费</view>
					<view>快递发货</view>
				</view>
			</view>
			<view class="freight-item">
				<label class="message">
					<view class="label">买家留言:</view>
					<input class="input" type="text" placeholder="点击给商家留言" />
				</label>
			</view>
			<view class="freight-item">
				<label class="message">
					<view class="label">合计</view>
					<text class="price">￥25.00</text>
