/**index.wxss**/
.Advertising{
    height: calc(100vh - 240rpx);
    margin:30rpx;
    width: calc(100vw - 60rpx);
}
.indexlist{
    margin:24rpx;
}
.indeximage{
    margin-bottom: 24rpx;
    height: calc(62vw - 24rpx);
    width: calc(100vw - 24rpx);
}
.indextitle{
    font-size: 30rpx;
    font-weight: bold;
    line-height: 40rpx;
    margin-bottom: 24rpx;
    text-align: left;
}
.infofrom{
    font-size: 24rpx;
    color: #9c9c9c;
    margin-bottom: 48rpx;
}
.quotes{
    width:48rpx;
    height:48rpx;
    margin-bottom:10rpx;
}
.quotesR{
    margin-top:10rpx;
    width:30rpx;
    height:30rpx;
}
.recommend{
    margin: 60rpx 0 12rpx 0;
    font-size: 56rpx;
    font-weight: bold;
}
.recommentcn{
    font-size:24rpx;
    color:#000;
    font-weight:bold;
    position: relative;
    height: 4rpx;
    width: calc(100vw - 24rpx);
    background: #000;
    margin-top: 10px;
}
.recommentcntext{
    background: #fff;
    padding: 0 24rpx;
    width: 100rpx;
    position: absolute;
    top:0;
    left: 50%;
    margin-left: -62rpx;
    margin-top: -12rpx;
}
.reommendlist{
    width: calc(100vw - 48rpx);
    overflow-x: auto;
    margin-top: 60rpx;
}
.reommendlistitem{
    display: inline-block;
    font-size: 24rpx;
    text-align: left;
    margin-bottom:36rpx;
}
.indeximage{
    width: calc(50vw - 36rpx);
    height: calc(50vw - 36rpx);
}
.reommendlistitem .grey{
  color: #9c9c9c;
  margin: 10rpx 0;
}
.reommendlistitem .price{
  color: #ab916b
}
